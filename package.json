{
  "name": "@zwolf/prism",
  "version": "2.10.0",
  "description": "Read-only lens for safely parsing data, with a built-in warning system.",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/prism.git"
  },
  "author": {
    "name": "George Czabania"
  },
  "license": "MIT",
  "scripts": {
    "test": "ava",
    "build": "del-cli dist && tsc",
    "docs": "typedoc ./src/index.ts --theme minimal --excludeExternals --excludeInternal --excludePrivate --exclude '*.test.ts'",
    "tidy": "xo --fix ./src",
    "lint": "pkg-lint"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "error-stack-parser": "2.0.6"
  },
  "devDependencies": {
    "@types/node": "16.7.9",
    "ava": "3.15.0",
    "del-cli": "4.0.1",
    "eslint-plugin-fp": "2.3.0",
    "typedoc": "0.21.9",
    "typescript": "4.3.5",
    "xo": "0.44.0"
  },
  "bugs": {
    "url": "https://github.com/stayradiated/prism/issues"
  },
  "homepage": "https://github.com/stayradiated/prism#readme",
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off",
      "fp/no-mutating-methods": "off",
      "fp/no-this": "off",
      "fp/no-class": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
